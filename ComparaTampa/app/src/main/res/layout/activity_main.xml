<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="166dp"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="22dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/imgFoto2"
        android:layout_width="166dp"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="199dp"
        android:layout_marginLeft="199dp"
        android:layout_marginTop="22dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="329dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/imgFoto"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="164dp"
        android:text="@string/txtResultado" />

    <TextView
        android:id="@+id/txtBarcode"
        android:layout_width="329dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/imgFoto"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="220dp"
        android:text="@string/txtResultado" />

    <Button
        android:id="@+id/btnFoto"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgFoto"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="188dp"
        android:text="@string/btnFoto" />

    <Button
        android:id="@+id/btnFoto2"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgFoto"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="131dp"
        android:text="@string/btnFoto2" />

    <Button
        android:id="@+id/btnProcess2"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgFoto"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="70dp"
        android:text="@string/btnProcess" />

    <TextView
        android:id="@+id/txtFinal"
        android:layout_width="221dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="@string/txtFinal" />
</RelativeLayout>